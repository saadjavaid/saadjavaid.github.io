---
import { getCollection } from "astro:content";
import { slugify } from "../utils/utils";

const { count } = Astro.props;
const allPosts = await getCollection("post");

// Sort posts by date (newest first)
const posts = allPosts
  .sort((a, b) => new Date(b.data.dateFormatted).valueOf() - new Date(a.data.dateFormatted).valueOf())
  .slice(0, parseInt(count));
---

<div class="space-y-8">
  {posts.map((post) => (
    <article class="group border border-neutral-200 dark:border-neutral-800 rounded-xl p-6 hover:border-neutral-300 dark:hover:border-neutral-700 transition-all duration-200 hover:shadow-lg dark:hover:shadow-neutral-900/20">
      <div class="flex flex-col space-y-3">
        <!-- Post Title -->
        <h2 class="text-xl font-semibold leading-tight">
          <a 
            href={`/post/${post.slug}/`}
            class="text-neutral-900 dark:text-neutral-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200 no-underline group-hover:text-blue-600 dark:group-hover:text-blue-400"
          >
            {post.data.title}
          </a>
        </h2>
        
        <!-- Post Description -->
        <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
          {post.data.description}
        </p>
        
        <!-- Post Meta: Date and Tags -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 pt-2">
          <!-- Date -->
          <time class="text-sm text-neutral-500 dark:text-neutral-500 font-medium">
            {post.data.dateFormatted}
          </time>
          
          <!-- Tags -->
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <a
                  href={`/tags/${slugify(tag)}/`}
                  class="inline-block px-2.5 py-1 text-xs font-medium bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 rounded-md hover:bg-blue-100 dark:hover:bg-blue-900 hover:text-blue-700 dark:hover:text-blue-300 transition-colors duration-200 no-underline"
                >
                  {tag}
                </a>
              ))}
            </div>
          )}
        </div>
      </div>
    </article>
  ))}
</div>