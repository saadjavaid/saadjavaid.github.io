---
import { slugify } from "../utils/utils";

const { post } = Astro.props;
---

<article class="border border-neutral-200 dark:border-neutral-800 rounded-lg p-6 hover:border-neutral-300 dark:hover:border-neutral-700 transition-colors duration-200">
  <h3 class="text-xl font-semibold mb-2">
    <a 
      href={`/post/${post.slug}/`}
      class="text-neutral-900 dark:text-neutral-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200 no-underline"
    >
      {post.data.title}
    </a>
  </h3>
  
  <p class="text-neutral-600 dark:text-neutral-400 mb-3">
    {post.data.description}
  </p>
  
  <div class="flex items-center justify-between text-sm">
    <time class="text-neutral-500 dark:text-neutral-500">
      {post.data.dateFormatted}
    </time>
    
    {post.data.tags && post.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-1">
        {post.data.tags.map((tag) => (
          <a
            href={`/tags/${slugify(tag)}/`}
            class="inline-block px-2 py-1 text-xs bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-400 rounded hover:bg-blue-100 dark:hover:bg-blue-900 hover:text-blue-700 dark:hover:text-blue-300 transition-colors duration-200 no-underline"
          >
            {tag}
          </a>
        ))}
      </div>
    )}
  </div>
</article>