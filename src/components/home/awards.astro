---
import awards from "../../collections/award.json";
import Button from "../button.astro";
import Award from "../award.astro";
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    Awards and Achievements
  </h2>
  <p class="mb-4 text-base text-neutral-600 dark:text-neutral-400">
    Selected Awards and Achievements
  </p>
  <div
    class="grid items-stretch w-full grid-cols-1 sm:grid-cols-2 md:grid-cols-2 gap-7 mt-7"
  >
    {
      awards.map((award) => {
        return (
          <Award
            name={award.name}
            description={award.description}
            image={award.image}
            url={award.url}
          />
        )
      })
    }
  </div>


</section>
