---
import award from "../collections/awards.json";
import PageHeading from "../components/page-heading.astro";
import Award from "../components/award.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Awards and Achievements">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Awards and Achievements"
      description="Selected Awards and Achievements"
    />

    <div
      class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2"
    >
      {
        award.map((award) => {
          return (
            <Award
              name={award.name}
              description={award.description}
              image={award.image}
              url={award.url}
            />
          )
        })
      }
    </div>
  </section>
</Layout>
